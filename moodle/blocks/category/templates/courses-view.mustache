<div id="courses-view-{{uniqid}}" class="thuyetlv" data-region="courses-view">
    {{#hascourses}}
    <div class="d-flex justify-content-center">
        <ul class="nav nav-pills my-5">
            <li class="nav-item">
                <a class="nav-link active" href="#category_courses_view_in_progress" data-toggle="tab">
                    {{#str}} inprogress, block_category {{/str}}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#category_courses_view_future" data-toggle="tab">
                    {{#str}} future, block_category {{/str}}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#category_courses_view_past" data-toggle="tab">
                    {{#str}} past, block_category {{/str}}
                </a>
            </li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane active fade show" id="category_courses_view_in_progress">
            {{#inprogress}}
                {{< block_category/courses-view-by-status }}
                    {{$id}}courses-view-in-progress{{/id}}
                    {{$status}}1{{/status}}
                    {{$pagingbarid}}pb-for-in-progress{{/pagingbarid}}
                    {{$pagingcontentid}}pc-for-in-progress{{/pagingcontentid}}
                {{/ block_category/courses-view-by-status }}
            {{/inprogress}}
            {{^inprogress}}
                <div class="justify-content-center text-center mt-5">
                    <img class="empty-placeholder-image-lg"
                         src="{{urls.nocourses}}"
                         alt="{{#str}} nocoursesinprogress, block_category {{/str}}"
                         role="presentation">
                    <p class="text-muted mt-3">{{#str}} nocoursesinprogress, block_category {{/str}}</p>
                </div>
            {{/inprogress}}
        </div>
        <div class="tab-pane fade" id="category_courses_view_future">
            {{#future}}
                {{< block_category/courses-view-by-status }}
                    {{$id}}courses-view-future{{/id}}
                    {{$status}}2{{/status}}
                    {{$pagingbarid}}pb-for-future{{/pagingbarid}}
                    {{$pagingcontentid}}pc-for-in-progress{{/pagingcontentid}}
                {{/ block_category/courses-view-by-status }}
            {{/future}}
            {{^future}}
                <div class="justify-content-center text-center mt-5">
                    <img class="empty-placeholder-image-lg"
                         src="{{urls.nocourses}}"
                         alt="{{#str}} nocoursesfuture, block_category {{/str}}"
                         role="presentation">
                    <p class="text-muted mt-3">{{#str}} nocoursesfuture, block_category {{/str}}</p>
                </div>
            {{/future}}
        </div>
        <div class="tab-pane fade" id="category_courses_view_past">
            {{#past}}
                {{< block_category/courses-view-by-status }}
                    {{$id}}courses-view-past{{/id}}
                    {{$status}}0{{/status}}
                    {{$pagingbarid}}pb-for-past{{/pagingbarid}}
                    {{$pagingcontentid}}pc-for-in-progress{{/pagingcontentid}}
                {{/ block_category/courses-view-by-status }}
            {{/past}}
            {{^past}}
                <div class="justify-content-center text-center mt-5">
                    <img class="empty-placeholder-image-lg"
                         src="{{urls.nocourses}}"
                         alt="{{#str}} nocoursespast, block_category {{/str}}"
                         role="presentation">
                    <p class="text-muted mt-3">{{#str}} nocoursespast, block_category {{/str}}</p>
                </div>
            {{/past}}
        </div>
    </div>
    {{/hascourses}}
    {{^hascourses}}
    <div class="justify-content-center text-center mt-5">
        <img class="empty-placeholder-image-lg"
             src="{{urls.nocourses}}"
             alt="{{#str}} nocourses, block_category {{/str}}"
             role="presentation">
        <p class="text-muted mt-3">{{#str}} nocourses, block_category {{/str}}</p>
    </div>
    {{/hascourses}}
</div>